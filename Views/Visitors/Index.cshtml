@model IEnumerable<lab2_gym.Models.Visitor>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Список відвідувачів</h2>
    <a asp-controller="Subscription" asp-action="Index" class="btn btn-secondary">
        Назад до редагування
    </a>
</div>

<table class="table table-dark-text">
    <thead>
        <tr>
            <th>Ім'я</th>
            <th>Прізвище</th>
            <th>Телефон</th>
            <th>Email</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var visitor in Model)
        {
            <tr>
                <form asp-action="Edit" method="post" style="display: contents;">
                    <input type="hidden" name="Id" value="@visitor.Id" />

                <td>
                    <input type="text" name="FirstName" value="@visitor.FirstName" class="form-control" />
                </td>
                <td>
                    <input type="text" name="LastName" value="@visitor.LastName" class="form-control" />
                </td>
                <td>
                    <input type="text" name="Phone" value="@visitor.Phone" class="form-control" />
                </td>
                <td>
                    <input type="email" name="Email" value="@visitor.Email" class="form-control" />
                </td>
                <td>
                    <button type="submit" class="btn btn-warning btn-sm">Зберегти</button>
                </td>
                </form>

                <td>
                    <form asp-action="Delete" asp-route-id="@visitor.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Ви впевнені, що хочете видалити цього відвідувача?');">
                            Видалити
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
